{% set title = 'Home' %}
{% extends "layout.njk" %}

{% block body %}
  <main class="container py-8">

    {% for component in componentArray %}
      <article x-data="{ open: false }" class="lg:w-10/12 mx-auto my-16 lg:border rounded-lg">
        <div class="flex justify-between border-b-2 border-gray-400 p-4 mb-4">
          <h2 class="text-3xl font-bold">
            {{ component.name }}
          </h2>
          <button
          class="inline-block px-4 py-2 mr-4 text-sm leading-none text-gray-600 border border-gray-600 rounded hover:border-transparent hover:text-teal-500 hover:bg-white lg:mt-0 lg:inline-block"
          @click="open = true"
        >
          show code
        </button>
        </div>

        <div x-show="open" @click.away="open = false" class="p-2 overflow-auto bg-gray-300 text ">
          <pre>
            {{ component.code }}
          </pre>
        </div>
        <div class="flex justify-center py-8">
          {{ component.code | safe }}
        </div>
      </article>

    {% endfor %}

  </main>
{% endblock %}